name: Update Day Counter

on:
  push:
    branches:
      - main
  schedule:
    - cron: '0 0 * * *'  # A cada 24 horas (pode ajustar conforme necessário)

jobs:
  update-counter:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Update days counter
        run: |
          # Data inicial: 12 de dezembro de 2022
          start_date="2022-12-12"
          # Obtém a data atual
          current_date=$(date +%Y-%m-%d)
          
          start_timestamp=$(date -d "$start_date" +%s)
          current_timestamp=$(date -d "$current_date" +%s)
          days_diff=$(( (current_timestamp - start_timestamp) / 86400 ))

          sed -i "s/Há **[0-9]* dias**/Há **$days_diff dias**/" README.md

      - name: Commit updated README
        run: |
          git config --global user.email "your-email@example.com"
          git config --global user.name "Your Name"
          git add README.md
          git commit -m "Atualizando contador de dias"
          git push
